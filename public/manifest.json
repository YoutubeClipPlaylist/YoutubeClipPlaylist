// https://developer.chrome.com/docs/extensions/mv3/manifest/
{
    "name": "Youtube影片截選播放清單 (Youtube Clip Playlist)",
    "description": "這是截選播放清單功能，專門設計來聽Vtuber的歌枠",
    "version": "12.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "unlimitedStorage"
    ],
    // https://developer.chrome.com/docs/extensions/mv3/match_patterns/
    "host_permissions": [
        "https://github.com/*",
        "https://gitlab.com/*",
        "https://*.githubusercontent.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "24": "icon24.png",
            "32": "icon32.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    // https://developer.chrome.com/docs/extensions/mv3/content_scripts/
    "content_scripts": [{
            "matches": [
                "https://www.youtube.com/*",
                "https://drive.google.com/*",
                // "https://youtube.googleapis.com/*",
                "https://*.sharepoint.com/*",
                "https://onedrive.live.com/*",
                "https://twitcasting.tv/*"
            ],
            "run_at": "document_start", //"document_idle", "document_start", "document_end"
            "match_origin_as_fallback": true,
            "js": ["contentScript.js"]
        },
        {
            "matches": [
                "https://www.youtube.com/*",
                "https://drive.google.com/*",
                // "https://youtube.googleapis.com/*",
                "https://*.sharepoint.com/*",
                "https://onedrive.live.com/*",
                "https://twitcasting.tv/*"
            ],
            "run_at": "document_idle", //"document_idle", "document_start", "document_end"
            "match_origin_as_fallback": true,
            "js": ["ass.min.js"]
        }
    ]
}